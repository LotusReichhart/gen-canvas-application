<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.GenCanvas" parent="Theme.AppCompat.DayNight.NoActionBar" >
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/gen_canvas</item>
        <item name="postSplashScreenTheme">@style/Theme.GenCanvas</item>
    </style>
</resources>